<resources>
	<bitmap id="LauncherIcon" filename="images/launcher_icon.png" />
	<fonts>
		<font id="id_font_black_diamond" filename="fonts/blackdiamond.fnt"
			filter="0123456789" />
	</fonts>

	<properties>
        <property id="SHOW_NOTIFICATION_ARC" type="boolean">true</property>
        <property id="NOTIFICATION_ARC_COLOUR" type="number">11141375</property> 
        <property id="SHOW_ICONS" type="number">0</property>
        <property id="SMART_DATE" type="boolean">true</property>
        <property id="DATE_FORMAT" type="number">0</property>
        <property id="MAIN_HAND_STYLE" type="number">101</property>    
        <property id="SECOND_HAND_STYLE" type="number">100</property>    
        <property id="SHOW_UTC_HAND" type="boolean">false</property> 
        <property id="UTC_HAND_OFFSET" type="number">0</property>         
        <property id="UTC_HAND_STYLE" type="number">102</property>         
        <property id="UTC_HIGHLIGHT_COLOUR" type="number">11141120</property> 
                   
        <property id="SHOW_MOONPHASE" type="number">0</property>        
	</properties>

	<strings>
		<string id="show_icons">Show icons? </string>
        <string id="show_icons_as_time">True if time format = 24 hour</string>
		<string id="show_icons_true">True</string>
		<string id="show_icons_false">False</string>

        <string id="show_moonphase">Show moon phase?</string>
        <string id="hide_moonphase">Hide moon phase</string>
        <string id="show_moonphase_at_6">Show moon phase at 6 O'Clock</string>
        <string id="show_moonphase_at_9">Show moon phase at 9 O'Clock</string>
		
        <string id="smart_date_desc">Smart date positioning? </string>
        <string id="date_format">Date format?</string>
        <string id="date_month">Month / Day of Month</string>              
        <string id="date_day_of_week">Day of week / Day of Month</string>
        <string id="date_alternate">Alternate</string>
               
        <string id="show_notification_arc">Show notification arc? </string>
        <string id="Notification_arc_colour">Notification arc colour? </string>

       <string id="main_hand_style">Main hand style:</string>
       <string id="second_hand_style">Second hand style:</string>
       <string id="SHOW_UTC_HAND">Show Dual-Time Hour Hand?</string>
       <string id="UTC_Hand_Offset">Offset from local time in minutes (0=UTC offset).</string>
       <string id="UTC_hand_style">Dual-time hand style:</string>
       <string id="UTC_highlight_colour">Dual-time hand highlight colour.</string>

       <string id="OFF">Off</string>
       <string id="SWORD_HAND1">Sword hand</string>
       <string id="CIRCLE_HAND">Circle hand</string>
       <string id="ARROW_HAND">Arrow hand</string>
       <string id="POINTER_HAND">Pointer hand</string>
       <string id="ARROW_HAND3D">3D Arrow hand</string>

       <string id="WHITE">White</string>
       <string id="LT_GRAY">Light gray</string>
       <string id="DK_GRAY">Dark gray</string>
       <string id="BLACK">Black</string>
       <string id="RED">Red</string>
       <string id="DK_RED">Dark Red</string>
       <string id="ORANGE">Orange</string>
       <string id="PINK">Pink</string>
       <string id="YELLOW">Yellow</string>
       <string id="PURPLE">Purple</string>
       <string id="GREEN">Green</string>
       <string id="DK_GREEN">Dark Green</string>
       <string id="BLUE">Blue</string>
       <string id="DK_BLUE">Dark Blue</string>
	 </strings>
	
        
	<settings>
		<setting propertyKey="@Properties.SHOW_ICONS" title="@Strings.show_icons">
			<settingConfig type="list">
				<listEntry value="0">@Strings.show_icons_as_time</listEntry>
				<listEntry value="1">@Strings.show_icons_true</listEntry>
				<listEntry value="2">@Strings.show_icons_false</listEntry>
			</settingConfig>
		</setting>
		<setting propertyKey="@Properties.SMART_DATE" title="@Strings.smart_date_desc">
			<settingConfig type="boolean" />
		</setting>
        <setting propertyKey="@Properties.DATE_FORMAT" title="@Strings.date_format">
            <settingConfig type="list">
                <listEntry value="0">@Strings.date_month</listEntry>
                <listEntry value="1">@Strings.date_day_of_week</listEntry>
                <listEntry value="2">@Strings.date_alternate</listEntry>
            </settingConfig>
        </setting>
            
        <setting propertyKey="@Properties.SHOW_NOTIFICATION_ARC" title="@Strings.show_notification_arc">
            <settingConfig type="boolean" />
        </setting>	
        <setting propertyKey="@Properties.NOTIFICATION_ARC_COLOUR" title="@Strings.Notification_arc_colour">
            <settingConfig type="list">
                <listEntry value="11141375">@Rez.Strings.PURPLE</listEntry>
                <listEntry value="11184810">@Rez.Strings.LT_GRAY</listEntry>
                <listEntry value="16733440">@Rez.Strings.ORANGE</listEntry>
                <listEntry value="16755200">@Rez.Strings.YELLOW</listEntry>
                <listEntry value="16711935">@Rez.Strings.PINK</listEntry>
                <listEntry value="255">@Rez.Strings.DK_BLUE</listEntry>
            </settingConfig>         
        </setting>                
           
        <setting propertyKey="@Properties.MAIN_HAND_STYLE" title="@Strings.main_hand_style">
            <settingConfig type="list">
<!--                <listEntry value="100">@Rez.Strings.POINTER_HAND</listEntry>  -->
                <listEntry value="101">@Rez.Strings.ARROW_HAND</listEntry>
<!--                 <listEntry value="102">@Rez.Strings.CIRCLE_HAND</listEntry>   -->
<!--                 <listEntry value="103">@Rez.Strings.SWORD_HAND</listEntry>   -->
                <listEntry value="104">@Rez.Strings.ARROW_HAND3D</listEntry>
            </settingConfig>
        </setting>              
        <setting propertyKey="@Properties.SECOND_HAND_STYLE" title="@Strings.second_hand_style">
            <settingConfig type="list">
                <listEntry value="999">@Rez.Strings.OFF</listEntry>
                <listEntry value="100">@Rez.Strings.POINTER_HAND</listEntry>
                <listEntry value="101">@Rez.Strings.ARROW_HAND</listEntry>
<!--                 <listEntry value="102">@Rez.Strings.CIRCLE_HAND</listEntry>   -->
<!--                 <listEntry value="103">@Rez.Strings.SWORD_HAND</listEntry>   -->
            </settingConfig>
        </setting>
        <setting propertyKey="@Properties.SHOW_UTC_HAND" title="@Strings.SHOW_UTC_HAND">
            <settingConfig type="boolean" />
        </setting>     
        <setting propertyKey="@Properties.UTC_HAND_OFFSET" title="@Strings.UTC_Hand_Offset">
            <settingConfig type="numeric" min="-720" max="720"/>
        </setting>     
        <setting propertyKey="@Properties.UTC_HAND_STYLE" title="@Strings.UTC_hand_style">
            <settingConfig type="list">
                <listEntry value="101">@Rez.Strings.ARROW_HAND</listEntry>
                <listEntry value="102">@Rez.Strings.CIRCLE_HAND</listEntry>  
            </settingConfig>
        </setting>
        <setting propertyKey="@Properties.UTC_HIGHLIGHT_COLOUR" title="@Strings.UTC_highlight_colour">
            <settingConfig type="list">
                <listEntry value="16733440">@Rez.Strings.ORANGE</listEntry>            
                <listEntry value="16777215">@Rez.Strings.WHITE</listEntry>
                <listEntry value="0">@Rez.Strings.BLACK</listEntry>
                <listEntry value="16711680">@Rez.Strings.RED</listEntry>
                <listEntry value="11141120">@Rez.Strings.DK_RED</listEntry>
                <listEntry value="16755200">@Rez.Strings.YELLOW</listEntry>
                <listEntry value="11141375">@Rez.Strings.PURPLE</listEntry>
                <listEntry value="65280">@Rez.Strings.GREEN</listEntry>
                <listEntry value="43520">@Rez.Strings.DK_GREEN</listEntry>
                <listEntry value="43775">@Rez.Strings.BLUE</listEntry>
                <listEntry value="255">@Rez.Strings.DK_BLUE</listEntry>
            </settingConfig>         
        </setting>          
    <setting propertyKey="@Properties.SHOW_MOONPHASE" title="@Strings.show_moonphase">
      <settingConfig type="list">
        <listEntry value="0">@Strings.hide_moonphase</listEntry>
        <listEntry value="1">@Strings.show_moonphase_at_6</listEntry>
        <listEntry value="2">@Strings.show_moonphase_at_9</listEntry>
      </settingConfig>
    </setting>
             
    </settings>

</resources>